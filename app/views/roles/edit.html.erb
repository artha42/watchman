<h2><%= @role.name %></h2>
<h3>Assigned Users - <%= @role.users.count %></h3>
<ul>
  <% @role.users.each do |user| %>
    <li><%= user.login %> - <%= link_to "remove", user_revoke_path(@scope,@instance_id,@role_sym,user.id) %>
  <% end %>
</ul>
<h3>Unassigned Users - <%= @rest_users.count %></h3>
<ul>
  <% @rest_users.each do |user| %>
    <li><%= user.login %> - <%= link_to "add", user_assign_path(@scope,@instance_id,@role_sym,user.id) %>
  <% end %>
</ul>
