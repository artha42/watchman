<%= error_messages_for :users %>
<% form_for @user do |f| %>
  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login, :id =>"login" %>
  </p>
  <p>
      <%= f.label :password %><br />
      <%= f.password_field :password, :id => "password" %>
      </p>
    <p>
   <%= f.label :password_confirmation %><br />
   <%= f.password_field :password_confirmation, :id => "confirm-password" %>
   </p>
   <p>
   <%= f.label :email %><br/>
   <%= f.text_field :email %>
   </p>
  <div id ="submit_button">
      <p><%= f.submit "Submit", :id => "submit" %></p>
  </div>
<% end %>
